{
    "extends": "@tsconfig/node16/tsconfig.json",
    "compilerOptions": {
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "resolveJsonModule": true, // Required for package.json import
        "experimentalDecorators": true,
        "noImplicitAny": true,
        "rootDir": ".",
        "baseUrl": ".",
        "outDir": "dist",
        "stripInternal": true,
        "noUncheckedIndexedAccess": true
    },
    "include": ["src/**/*", "tests/**/*", "global.d.ts"]
}
